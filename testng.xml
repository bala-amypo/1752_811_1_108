<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Dynamic Event Ticket Pricing Engine Test Suite" verbose="1" parallel="false">

    <listeners>
        <listener class-name="com.example.demo.TestResultListener"/>
    </listeners>

    <test name="All Unit and Integration Tests">
        <groups>
            <run>
                <include name="servlet"/>
                <include name="crud"/>
                <include name="di"/>
                <include name="hibernate"/>
                <include name="jpa"/>
                <include name="manyToMany"/>
                <include name="security"/>
                <include name="hql"/>
            </run>
        </groups>

        <classes>
            <class name="com.example.demo.DynamicEventTicketPricingEngineApplicationTests"/>
        </classes>
    </test>

</suite>
